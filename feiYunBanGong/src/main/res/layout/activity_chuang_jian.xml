<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.feirui.feiyunbangong.activity.WoDeTuanDuiActivity" >

    <!-- bar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        android:background="@color/main_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/y70"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/arrows_left" />

        <TextView
            style="@style/ffffff_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的团队" />
    </RelativeLayout>

    <!-- 创建的团队列表 -->

    <ListView
        android:id="@+id/lv_tuandui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/fenge"
        android:dividerHeight="@dimen/y4" >
    </ListView>

</LinearLayout>