<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <com.feirui.feiyunbangong.view.CircleImageView2
            android:id="@+id/item_send_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/fragment_head"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp">
            <TextView
                android:id="@+id/item_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#666"
                android:text="李策的请假申请"/>
            <TextView
                android:id="@+id/item_send_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:textColor="#999"
                android:text="类型：事假"/>
            <!--<TextView-->
                <!--android:id="@+id/item_send_starttime"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:textSize="8sp"-->
                <!--android:textColor="#999"-->
                <!--android:text="开始时间：2017-03-19"-->
                <!--android:visibility="gone"/>-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp">
        <TextView
            android:id="@+id/item_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#999"
            android:text="2017.03.19"/>

        <TextView
            android:id="@+id/item_send_state"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textColor="#ff8736"
            android:textSize="13sp"
            android:text="wei"
            android:background="@drawable/shape_item_tag"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>