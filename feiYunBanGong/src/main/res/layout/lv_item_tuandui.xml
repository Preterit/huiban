<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_name"
            style="@style/a000000_38"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x80"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:text="团队：哈哈哈哈哈哈哈哈哈..." />

        <Button
            android:id="@+id/bt_guanli"
            style="@style/a000000_42"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y100"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x100"
            android:background="@drawable/shape_bt_bg"
            android:text="管理"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_number"
            style="@style/a000000_38"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x200"
            android:gravity="center_vertical"
            android:text="团队号：" />

        <TextView
            android:id="@+id/tv_message"
            style="@style/ffffff_24"
            android:layout_width="@dimen/size45"
            android:layout_height="@dimen/size45"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/hongdian"
            android:gravity="center"
            android:padding="@dimen/size2"
            android:text="112" />
    </RelativeLayout>

</RelativeLayout>