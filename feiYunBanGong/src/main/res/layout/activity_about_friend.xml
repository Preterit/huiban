<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include
        layout="@layout/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y450"
        android:layout_marginTop="@dimen/y50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size50">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/y300"
            android:layout_marginLeft="@dimen/x50"
            android:src="@drawable/fragment_head"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                style="@style/a000000_44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <TextView
                android:id="@+id/tv_phone"
                style="@style/a000000_44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text=""/>

            <TextView
                android:id="@+id/tv_address"
                style="@style/a000000_44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20"
                android:text=""/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/huise"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y80"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/a000000_42"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center_vertical"
            android:text="选择分组:"/>

        <LinearLayout
            android:id="@+id/ll_choice"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y90"
            android:background="@drawable/shape_bt_bg">

            <TextView
                android:id="@+id/tv_choice"
                style="@style/a000000_36"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="@dimen/x150"
                android:text="分组"/>

            <ImageView
                android:layout_width="@dimen/size30"
                android:layout_height="@dimen/size30"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x25"
                android:src="@drawable/jiantou_xia"/>
        </LinearLayout>
    </LinearLayout>

    <com.feirui.feiyunbangong.view.RevealLayout
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y120">

        <Button
            android:id="@+id/bt_submit"
            style="@style/ffffff_38"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:background="@drawable/blue_bt_selector"
            android:gravity="center"
            android:text="确认"/>
    </com.feirui.feiyunbangong.view.RevealLayout>

</LinearLayout>