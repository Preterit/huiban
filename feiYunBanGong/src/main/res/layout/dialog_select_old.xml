<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x750"
    android:layout_height="@dimen/y800"
    android:background="@drawable/shape_bg_update"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@style/ffffff_60"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size150"
        android:gravity="center"
        android:text="标题" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_white_update"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_old_man"
            android:layout_width="@dimen/x750"
            android:layout_height="@dimen/y600"
            android:divider="#CDCDCD"
            android:dividerHeight="@dimen/x2" >
        </ListView>
    </LinearLayout>

</LinearLayout>