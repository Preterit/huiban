<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/type_handle"
        android:layout_width="@dimen/x400"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inclue"
        android:background="@drawable/jiahaoyou_bag"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_all"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y50"
            android:gravity="center"
            android:text="全部"
            android:textSize="@dimen/size50"
            />
        <TextView
            android:id="@+id/tv_leave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="请假"
            android:textSize="@dimen/size50"
            />
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="报销"
            android:textSize="@dimen/size50"
            />

        <TextView
            android:id="@+id/tv_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="外出"
            android:textSize="@dimen/size50" />

        <TextView
            android:id="@+id/tv_spend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="付款"
            android:textSize="@dimen/size50"
            />
        <TextView
            android:id="@+id/tv_purchase"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="采购"
            android:textSize="@dimen/size50"
            />
        <TextView
            android:id="@+id/tv_else"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center"
            android:text="其他"
            android:textSize="@dimen/size50"
            />
    </LinearLayout>

</LinearLayout>