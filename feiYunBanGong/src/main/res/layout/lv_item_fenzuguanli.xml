<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/size45" >

        <TextView
            android:id="@+id/tv_zuming"
            style="@style/a000000_48"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x36"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/iv_shanchu"
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size60"
            android:layout_gravity="center_vertical"
            android:src="@drawable/hongcha" />

        <ImageView
            android:id="@+id/iv_bianji"
            android:layout_width="@dimen/size60"
            android:layout_height="@dimen/size60"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x88"
            android:layout_marginRight="@dimen/x68"
            android:src="@drawable/set" />
    </LinearLayout>

</LinearLayout>