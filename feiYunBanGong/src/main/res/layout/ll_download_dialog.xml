<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/size350"
    android:layout_height="@dimen/size350"
    android:background="@drawable/shape_bg_loading" >

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ProgressBar
        android:layout_width="@dimen/size120"
        android:layout_height="@dimen/size120"
        android:layout_gravity="center"
        android:background="@drawable/loadingpage_bg"
        android:indeterminateDrawable="@drawable/animdraw"
        android:indeterminateDuration="1500" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

</LinearLayout>