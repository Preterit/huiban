<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bantouming"
    android:layout_height="match_parent"
    android:id="@+id/view_remind">
    <android.support.v7.widget.CardView
        android:id="@+id/remind_layout"
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/zu1"
            android:id="@+id/imageView6"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.072" />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="     您还没有设置头像和关键词，为方便使用，快去前往设置吧!"
            android:textSize="18sp"
            android:id="@+id/textView21"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.736" />

            <Button
                android:id="@+id/gosit"
                android:layout_width="130dp"
                android:layout_height="33dp"
                android:text="前去设置"
                android:textColor="@color/white"
                android:background="@drawable/shape_bt_bg_remind"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.072"
                app:layout_constraintVertical_bias="0.946" />
            <Button
                android:id="@+id/noremind"
                android:layout_width="130dp"
                android:layout_height="33dp"
                android:text="不再提示"
                android:textColor="@color/white"
                android:background="@drawable/shape_bt_bg_remind2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.927"
                app:layout_constraintVertical_bias="0.944" />


    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>