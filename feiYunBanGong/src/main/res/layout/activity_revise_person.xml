<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_revise"
   >
    <include
        layout="@layout/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#f4f4f4">
        <com.feirui.feiyunbangong.view.CircleImageView
            android:id="@+id/revise_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/fragment_head"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/camera"
            android:layout_alignBottom="@id/revise_head"
            android:layout_marginLeft="60dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:text="姓名"/>
        <EditText
            android:id="@+id/revise_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="73dp"
            android:background="@null"
            android:text="諸葛亮"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:text="性別"/>
        <TextView
            android:id="@+id/revise_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="73dp"
            android:gravity="center_vertical"
            android:text="男"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f4f4f4"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:text="生日"/>
        <TextView
            android:id="@+id/revise_birth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="73dp"
            android:text="2000-12-01"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:text="地区"/>
        <EditText
            android:id="@+id/revise_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginLeft="73dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="北京 朝阳"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f4f4f4"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#999"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="我的关键词"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"></View>
    <GridView
        android:id="@+id/revise_gd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:columnWidth="100dp"
        android:horizontalSpacing="20dp"
        android:numColumns="3"></GridView>

</LinearLayout>
