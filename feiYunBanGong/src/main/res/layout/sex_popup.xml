<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/re_sex"
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:background="@drawable/corners_bg">
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999"
            android:textSize="20sp"
            android:text="选择性别"
            android:layout_marginTop="17dp"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/ll_boy"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_sex">
            <ImageView
                android:id="@+id/man_sex_pop"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/check_ok"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="18sp"
                android:text="男"
               android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_boy">
            <ImageView
                android:id="@+id/wo_sex_pop"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/check_no"
                android:layout_marginLeft="35dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:textSize="18sp"
                android:text="女"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:id="@+id/tv_sex_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:textSize="16sp"
                android:text="取消"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/tv_sex_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4087f2"
                android:textSize="16sp"
                android:text="确定"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>