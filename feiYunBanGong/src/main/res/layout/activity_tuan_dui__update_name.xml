<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context="com.feirui.feiyunbangong.activity.TuanDui_UpdateNameActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        layout="@layout/top" />

    <LinearLayout
        android:id="@+id/ll_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/update_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/fragment_head"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                android:text="修改团队名称："
                android:textColor="#333"
                android:textSize="18sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f1f1"/>
            <EditText
                android:layout_gravity="center"
                android:id="@+id/et_update_name"
                android:hint="新的团队名"
                android:textColorHint="#CDC9C9"
                android:textColor="#666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="18dp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/team_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="18dp"
                android:text="团队介绍："
                android:textColor="#333"
                android:textSize="18sp"
                />
            <EditText
                android:layout_below="@id/team_intro"
                android:layout_gravity="center"
                android:id="@+id/et_update_introduction"
                android:hint="请填写团队介绍，让大家更了解你的团队(最多40字)"
                android:textColor="#666"
                android:gravity="left"
                android:paddingTop="10dp"
                android:maxLength="40"
                android:textColorHint="#CDC9C9"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@null"/>
            <TextView
                android:id="@+id/tv_num_update"
                android:layout_below="@id/et_update_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666"
                android:text="0/40"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
