<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_new_member"
            android:layout_width="@dimen/size50"
            android:layout_height="@dimen/size50"
            android:layout_gravity="top"
            android:layout_marginLeft="@dimen/x100"
            android:scaleType="fitXY"
            android:src="@drawable/new_member"
            android:visibility="invisible" />

        <com.feirui.feiyunbangong.view.TextImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size100"
            android:src="@drawable/user"/>

        <TextView
            android:id="@+id/tv_name"
            style="@style/a000000_44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:text="张三" />

        <TextView
            android:id="@+id/tv_guanliyuan"
            style="@style/ffffff_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:background="@drawable/shape_bt_bg_lanse"
            android:paddingBottom="@dimen/y15"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            android:paddingTop="@dimen/y15"
            android:text="团长" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_biaoqian"
            style="@style/main_color_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x60"
            android:paddingBottom="@dimen/y15"
            android:paddingLeft="@dimen/x40"
            android:paddingRight="@dimen/x40"
            android:paddingTop="@dimen/y15"
            android:text="北京"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>