<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_feedback_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        layout="@layout/top" />

    <ScrollView
        android:id="@+id/sv_caigou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x12"
                android:layout_marginLeft="@dimen/x38"
                android:layout_marginRight="@dimen/x38"
                android:layout_marginTop="@dimen/y28"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y8"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/a000000_48"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="J先生" />

                    <ImageView
                        android:layout_width="@dimen/x42"
                        android:layout_height="@dimen/y46"
                        android:src="@drawable/xiaohogren" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y140"
                    android:layout_marginTop="@dimen/y18"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/a000000_44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司名称：" />

                    <EditText
                        android:id="@+id/et_1"
                        style="@style/a000000_38"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y140"
                    android:layout_marginTop="@dimen/y12"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/a000000_44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司职位：" />

                    <EditText
                        android:id="@+id/et_2"
                        style="@style/a000000_38"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y140"
                    android:layout_marginTop="@dimen/y12"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/a000000_44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司地址：" />

                    <EditText
                        android:id="@+id/et_3"
                        style="@style/a000000_38"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入..." />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y140"
                    android:layout_marginTop="@dimen/y12"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/a000000_44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话：" />

                    <EditText
                        android:id="@+id/et_4"
                        style="@style/a000000_38"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请输入..." />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x38"
                android:layout_marginRight="@dimen/x38"
                android:layout_marginTop="@dimen/y22" >

                <TextView
                    style="@style/a000000_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传名片：" />

                <ImageView
                    android:id="@+id/iv_mingpian"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/y200"
                    android:src="@drawable/add_pic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x38"
                android:layout_marginRight="@dimen/x38"
                android:layout_marginTop="@dimen/y68" >

                <TextView
                    style="@style/a000000_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意        向：" />

                <EditText
                    android:id="@+id/et_5"
                    style="@style/a000000_38"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请输入..."
                    android:lines="5"
                    android:padding="@dimen/x26" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x38"
                android:layout_marginRight="@dimen/x38"
                android:layout_marginTop="@dimen/y68" >

                <TextView
                    style="@style/a000000_50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文字说明：" />

                <EditText
                    android:id="@+id/et_6"
                    style="@style/a000000_38"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="请输入..."
                    android:lines="5"
                    android:padding="@dimen/x26" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                style="@style/ffffff_60"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x114"
                android:layout_marginBottom="@dimen/y150"
                android:layout_marginLeft="@dimen/x140"
                android:layout_marginRight="@dimen/x140"
                android:layout_marginTop="@dimen/y50"
                android:background="@drawable/blue_bt_selector"
                android:gravity="center"
                android:text="提交" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>