<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#fff"
        android:layout_marginTop="1dp">
        <com.feirui.feiyunbangong.view.TextImageView
            android:id="@+id/cir_item_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/fragment_head"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/cir_item_head">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘备"
                    android:textColor="#333"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_item_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000年"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:id="@+id/iv_item_sex"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@drawable/person_man"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="3dp">
                <TextView
                    android:id="@+id/tv_item_key1"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_item_tag"
                    android:textColor="#ff8736"
                    android:gravity="center"
                    android:maxEms="4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="刘备"
                    android:textSize="12sp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_item_key2"
                    android:layout_width="59dp"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_person_tag"
                    android:gravity="center"
                    android:maxEms="4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="网页设计"
                    android:textSize="12sp"
                    android:textColor="#3686ff"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_item_key3"
                    android:layout_width="59dp"
                    android:layout_height="20dp"
                    android:background="@drawable/shape_person_tag"
                    android:gravity="center"
                    android:text="UI设计"
                    android:maxEms="4"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="#3686ff"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/item_area"/>
                <TextView
                    android:id="@+id/tv_item_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="北京 朝阳"
                    android:textSize="11sp"
                    android:textColor="#999"
                    android:layout_marginLeft="3dp"/>
                <TextView
                    android:id="@+id/tv_item_distence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="15km"
                    android:textSize="11sp"
                    android:textColor="#999"
                    android:layout_marginLeft="8dp"/>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/iv_item_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_shop"
                android:layout_marginLeft="20dp"
                />
            <ImageView
                android:id="@+id/iv_item_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiahaoou"
                android:layout_marginTop="28dp"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>