<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_huise"
    android:orientation="vertical"
    tools:context="com.feirui.feiyunbangong.activity.JiaRuTuanDuiActivity" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y500"
        android:background="@color/a42baff"
        android:orientation="vertical" >

        <com.feirui.feiyunbangong.view.TextImageView
            android:id="@+id/tiv_head"
            android:layout_width="@dimen/size200"
            android:layout_height="@dimen/size200"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y60" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/ffffff_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y60"
            android:text="会办" />

        <TextView
            android:id="@+id/tv_team_num"
            style="@style/ffffff_49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginTop="@dimen/y100"
        android:orientation="horizontal" >

        <TextView
            style="@style/a000000_44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已加入成员：" />

        <TextView
            android:id="@+id/tv_num"
            style="@style/a000000_44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0人" />
    </LinearLayout>

    <ListView
         android:id="@+id/lv_yijiaru"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/y10"
        android:layout_weight="1"
        android:divider="@color/fenge"
        android:dividerHeight="@dimen/y4" >
    </ListView>

    <Button
        android:id="@+id/tv_jiaru"
        style="@style/ffffff_60"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x114"
        android:layout_marginBottom="@dimen/y100"
        android:layout_marginLeft="@dimen/x140"
        android:layout_marginRight="@dimen/x140"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/blue_bt_selector"
        android:gravity="center"
        android:text="立即加入" />

</LinearLayout>