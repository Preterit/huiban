<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/act_person_backgroud"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.feirui.feiyunbangong.view.CircleImageView
                android:id="@+id/cir_head"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="11dp"
                android:src="@drawable/aliwx_head_bg_0" />

            <ImageView
                android:id="@+id/person_shop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/dian" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘备"
                android:textColor="#fff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/boy" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:text="2020-01-01"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

    <include
        layout="@layout/comment_person_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <LinearLayout
            android:id="@+id/person_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:visibility="gone">
            <Button
                android:id="@+id/person_talk"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="28dp"
                android:background="#3686ff"
                android:text="去聊天"
                android:textSize="18sp"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/person_add"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="24dp"
                android:background="#ffb136"
                android:text="加好友"
                android:textColor="#fff"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>