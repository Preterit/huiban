<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
       android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="持卡人"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="16sp"
                />
                <EditText
                    android:id="@+id/chikaren_name_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:hint="请输入持卡人姓名"
                    android:background="@null"
                    />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/shenfenzheng_card_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:hint="请输入正确身份证号"
                android:background="@null"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="证件类型"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/type_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:hint="身份证"
                android:background="@null"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/yinhangka_card_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:hint="请输入正确的银行卡号"
                android:background="@null"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfcfcf"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"

            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="开户行"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/kaihuhang_edt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:hint="请输入开户银行"
                android:background="@null"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确保"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名、身份证、银行卡"
            android:textColor="#3586FC"
            />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开户人为同一个人"
             />
    </LinearLayout>

    <ImageButton
        android:id="@+id/lijitianjia_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lijitianjia_btn"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@null"
        />

</LinearLayout>
