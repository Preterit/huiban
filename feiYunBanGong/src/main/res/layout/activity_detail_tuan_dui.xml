<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffff"
    android:orientation="vertical"
    tools:context="com.feirui.feiyunbangong.activity.TuanDui_DetailActivity" >

    <include
        android:id="@+id/inclue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        layout="@layout/top" />

    <SearchView
        android:id="@+id/sc_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/et_bg"
        android:focusable="false"
        android:iconifiedByDefault="false"
        android:queryHint="请输入名字"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_search_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您还没有该联系人~"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.feirui.feiyunbangong.view.RefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.xw.repo.refresh.PullListView
                android:id="@+id/lv_chengyuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ffffff"
                android:divider="@color/fenge"
                android:dividerHeight="@dimen/y4"
                android:layout_marginTop="10dp"
                android:visibility="gone"></com.xw.repo.refresh.PullListView>
        </com.feirui.feiyunbangong.view.RefreshLayout>
        <ListView
            android:id="@+id/lv_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:visibility="gone"
            ></ListView>
    </RelativeLayout>


</LinearLayout>