<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/activity_horizontal_margin"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/ivHeadFormItem"
    android:layout_width="36dp"
    android:layout_height="36dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/ic_launcher"/>
  <TextView
    android:id="@+id/tvNameFormItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    app:layout_constraintLeft_toRightOf="@id/ivHeadFormItem"
    tools:text="白小心"/>
  <TextView
    android:id="@+id/tvTimeFormItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textAppearance="@style/tvStyle"
    app:layout_constraintLeft_toLeftOf="@id/tvNameFormItem"
    app:layout_constraintTop_toBottomOf="@id/tvNameFormItem"
    tools:text="2017"/>

  <TextView
    android:id="@+id/tvLabelFormItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:textAppearance="@style/tvStyle"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:background="@color/red"
    tools:text="日报"
    />
</android.support.constraint.ConstraintLayout>