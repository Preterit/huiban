<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        layout="@layout/top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x499"
        android:background="@drawable/ban1" >

        <TextView
            android:id="@+id/tv_week"
            style="@style/ffffff_49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x55"
            android:layout_marginTop="@dimen/y168"
            android:text="星期日"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_day"
            style="@style/ffffff_49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_week"
            android:layout_marginLeft="@dimen/x55"
            android:layout_marginTop="@dimen/y28"
            android:text="2016年10月9日"
            android:visibility="invisible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y68"
        android:paddingLeft="@dimen/x56"
        android:paddingRight="@dimen/x56" >

        <ImageView
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x240"
            android:src="@drawable/time_in" />

        <TextView
            android:id="@+id/tv_in"
            style="@style/a000000_48"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上班 9：00" />

        <LinearLayout
            android:id="@+id/ll_start"
            android:layout_width="@dimen/x270"
            android:layout_height="@dimen/y108"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personage_firm3"
            android:gravity="center" >

            <ImageView
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/y55"
                android:src="@drawable/sign_in" />

            <TextView
                style="@style/ffffff_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="签到" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y68"
        android:paddingLeft="@dimen/x56"
        android:paddingRight="@dimen/x56" >

        <ImageView
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x240"
            android:src="@drawable/time_out" />

        <TextView
            android:id="@+id/tv_out"
            style="@style/a000000_48"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下班 9：00" />

        <LinearLayout
            android:id="@+id/ll_end"
            android:layout_width="@dimen/x270"
            android:layout_height="@dimen/y108"
            android:layout_gravity="center_vertical"
            android:background="@drawable/personage_firm1"
            android:gravity="center" >

            <ImageView
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/y55"
                android:src="@drawable/sign_out" />

            <TextView
                style="@style/ffffff_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:text="签退" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sign"
        style="@style/ffffff_49"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:layout_marginLeft="@dimen/x150"
        android:layout_marginRight="@dimen/x150"
        android:layout_marginTop="@dimen/y180"
        android:background="@color/main_color"
        android:gravity="center"
        android:text="WiFi打卡" />

</LinearLayout>