<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_waichu"
    tools:context="com.feirui.feiyunbangong.activity.ShenPiWaiChuDetailActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/top"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <com.feirui.feiyunbangong.view.CircleImageView
        android:id="@+id/baoxiao_head_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include2"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/ic_launcher"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="67dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        />

    <TextView
        android:id="@+id/tv_sp_tijiaoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/baoxiao_head_img"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@+id/baoxiao_head_img"
        android:text="姓名"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintLeft_toRightOf="@+id/baoxiao_head_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_sp_tijiaotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/baoxiao_head_img"
        android:layout_alignStart="@+id/tv_sp_tijiaoname"
        android:text="提交日期"
        android:textSize="15sp"
        android:layout_marginRight="175dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/baoxiao_head_img"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.246"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sp_tijiaoname" />

    <TextView
        android:id="@+id/tv_sp_leixing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_sp_tijiaoname"
        android:text="外出"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.975" />

    <TextView
        android:id="@+id/tv_sp_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/baoxiao_head_img"
        android:layout_below="@+id/baoxiao_head_img"
        android:text="开始外出日期"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView11"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.358" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="——"
        android:layout_alignBaseline="@+id/tv_sp_starttime"
        android:layout_alignBottom="@+id/tv_sp_starttime"
        android:layout_toEndOf="@+id/tv_sp_tijiaoname"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_sp_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束外出日期"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/iv_sp_3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.53" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共计"
        android:layout_alignBaseline="@+id/end_time"
        android:layout_alignBottom="@+id/end_time"
        android:id="@+id/textView4"
        android:layout_alignStart="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="187dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/end_time"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/baoxiao_head_img"
        android:layout_below="@+id/tv_sp_starttime"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="187dp"
        android:text="0.0天"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="350dp"
        android:layout_height="3dp"
        android:layout_alignEnd="@+id/tv_sp_leixing"
        android:layout_below="@+id/end_time"
        android:background="#CFCFCF"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="212dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事由："
        android:layout_alignBaseline="@+id/tv_sp_shiyou"
        android:layout_alignBottom="@+id/tv_sp_shiyou"
        android:layout_alignStart="@+id/tv_sp_starttime"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.024" />

    <TextView
        android:id="@+id/tv_sp_shiyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事由回答"
        android:layout_below="@+id/view"
        android:layout_alignStart="@+id/tv_sp_tijiaotime"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="238dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.223" />

    <ImageView
        android:id="@+id/iv_sp_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/add_pic"
        android:scaleType="centerInside"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.029" />

    <ImageView
        android:id="@+id/iv_sp_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/add_pic"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:layout_alignTop="@+id/iv_sp_1"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toRightOf="@+id/iv_sp_1"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_sp_3"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="305dp" />

    <ImageView
        android:id="@+id/iv_sp_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/add_pic"
        android:scaleType="centerInside"
        android:visibility="invisible"
        android:layout_above="@+id/btn_pass"
        android:layout_alignEnd="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="305dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.97" />


    <Button
        android:id="@+id/btn_pass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_sp_3"
        android:layout_below="@+id/iv_sp_2"
        android:background="@drawable/shape_btn_shenpi_tg"
        android:text="通过审批"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="503dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.036" />

    <Button
        android:id="@+id/btn_nopass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_pass"
        android:layout_alignBottom="@+id/btn_pass"
        android:layout_alignStart="@+id/iv_sp_1"
        android:background="@drawable/shape_btn_shenpi_btg"
        android:text="拒绝通过"
        android:textColor="@color/white"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="503dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_pass"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>
