<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/act_person_backgroud">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.feirui.feiyunbangong.view.CircleImageView
                android:id="@+id/cir_head"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/aliwx_head_bg_0"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/person_shop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/dian"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘备"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/boy"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:text="2020-01-01"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <include
        layout="@layout/comment_person_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></include>


</LinearLayout>