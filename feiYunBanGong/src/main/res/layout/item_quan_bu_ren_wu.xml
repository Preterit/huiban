<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#ffffff"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <ImageView
            android:id="@+id/iv_qbrw_tx"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="22dp" />

        <TextView
            android:id="@+id/tv_qbrw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp" />
        <TextView
            android:id="@+id/tv_qbrw_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="70dp" />

        <TextView
            android:id="@+id/tv_qbrw_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="任务标题"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_above="@+id/tv_qbrw_target"
            android:layout_alignEnd="@+id/tv_qbrw_state" />

        <TextView
            android:id="@+id/tv_qbrw_target"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="今晚完成"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:id="@+id/iv_qbrw_state"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_daijiedan"
            android:layout_alignBottom="@+id/tv_qbrw_state"
            android:layout_toStartOf="@+id/tv_qbrw_state"
            android:layout_marginEnd="7dp" />
        <TextView
            android:id="@+id/tv_qbrw_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待接单"
            android:textColor="#5BBAF8"
            android:layout_marginEnd="16dp"
            android:layout_alignTop="@+id/tv_qbrw_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>