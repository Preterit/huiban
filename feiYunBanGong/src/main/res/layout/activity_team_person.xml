<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/team_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.feirui.feiyunbangong.view.CircleImageView
                android:id="@+id/cir_head"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/aliwx_head_bg_0"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/person_shop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/team_shop"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刘备"
                android:textSize="18sp"
                android:textColor="#fff"/>
            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/team_boy"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-01-01"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_er_wei_ma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/person_erweima"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bebebe"
            android:layout_marginTop="12dp"></View>
        <LinearLayout
            android:id="@+id/ll_person_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/tv_bian_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="好友可查看"
                android:textColor="#999"
                android:textSize="15sp" />
        </LinearLayout>



        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bebebe"
            android:layout_marginTop="12dp"></View>
        <LinearLayout
            android:id="@+id/ll_person_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/person_area"/>

            <TextView
                android:id="@+id/tv_person_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="北京 朝阳"
                android:textColor="#666"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/team_key"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_key1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_item_tag"
            android:textColor="#ff9039"
            android:text="UI设计"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_key2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_item_tag"
            android:textColor="#ff9039"
            android:text="平面设计"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_key3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_item_tag"
            android:textColor="#ff9039"
            android:text="网页美工"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_key4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_item_tag"
            android:textColor="#ff9039"
            android:text="UI设计"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_key5"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_item_tag"
            android:textColor="#ff9039"
            android:text="平面设计"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:visibility="gone"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"
        android:layout_marginTop="10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="13dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/team_area" />
        <TextView
            android:id="@+id/tv_change_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置"
            android:textColor="#333"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_postion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#999"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:maxLines="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <LinearLayout
            android:id="@+id/person_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:visibility="gone">
            <Button
                android:id="@+id/person_talk"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="28dp"
                android:background="#3686ff"
                android:text="去聊天"
                android:textSize="18sp"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/person_add"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="24dp"
                android:background="#ffb136"
                android:text="加好友"
                android:textColor="#fff"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>