<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- 名片消息自定义 -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="189dp"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_label"
            style="@style/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="13dp"
            android:text="推荐好友"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <View
            android:id="@+id/div_identity_card"
            style="@style/div"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label"
            />

        <ImageView
            android:id="@+id/iv_head_identity_card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="13dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/div_identity_card"
            tools:src="@drawable/ic_launcher"
            />

        <TextView
            android:id="@+id/tv_name_identity_card"
            style="@style/tvStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/iv_head_identity_card"
            app:layout_constraintTop_toBottomOf="@id/div_identity_card"
            tools:text="纳尼"
            />

        <TextView
            android:id="@+id/tv_phone_identity_card"
            style="@style/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="13sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_name_identity_card"
            app:layout_constraintTop_toBottomOf="@id/tv_name_identity_card"
            tools:text="账号:13278961120"
            />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>