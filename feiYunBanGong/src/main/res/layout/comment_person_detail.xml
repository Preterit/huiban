<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/common_person">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_er_wei_ma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/person_erweima"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bebebe"
            android:layout_marginTop="22dp"></View>
        <LinearLayout
            android:id="@+id/ll_person_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/phone"/>
            <TextView
                android:id="@+id/tv_bian_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友可查看"
                android:textSize="15sp"
                android:textColor="#999"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#bebebe"
            android:layout_marginTop="22dp"></View>
        <LinearLayout
            android:id="@+id/ll_person_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/person_area"/>

            <TextView
                android:id="@+id/tv_person_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="北京 朝阳"
                android:textColor="#666"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/guanjianci"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关键词"
            android:textColor="#333"
            android:textSize="18sp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv_key1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_person_tag"
            android:text="UI设计"
            android:textColor="#3686ff"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_key2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_person_tag"
            android:text="平面设计"
            android:textColor="#3686ff"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_key3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_person_tag"
            android:text="网页美工"
            android:textColor="#3686ff"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/tv_key4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/shape_person_tag"
            android:text="UI设计"
            android:textColor="#3686ff"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/tv_key5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_person_tag"
            android:text="平面设计"
            android:textColor="#3686ff"
            android:textSize="15sp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <LinearLayout
            android:id="@+id/person_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginBottom="18dp"
            android:visibility="gone">
            <Button
                android:id="@+id/person_talk"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="28dp"
                android:background="#3686ff"
                android:text="去聊天"
                android:textSize="18sp"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/person_add"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="24dp"
                android:background="#ffb136"
                android:text="加好友"
                android:textColor="#fff"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>