    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:layout_marginLeft="@dimen/x140"
        android:layout_marginRight="@dimen/x140"
        android:layout_marginTop="@dimen/y50"
        android:background="@drawable/et_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:text="邀请码：" />

        <EditText
            android:id="@+id/et_yaoqing"
            style="@style/a000000_42"
            android:layout_width="0dp"
            android:layout_height="@dimen/y120"
            android:layout_marginRight="@dimen/x50"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入邀请码"
            />

        <TextView
            style="@style/hongse_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x50"
            android:text="可不填" />
    </LinearLayout>

    <com.feirui.feiyunbangong.view.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y150" >

        <Button
            android:id="@+id/btn_confirm"
            style="@style/ffffff_60"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x114"
            android:layout_marginLeft="@dimen/x140"
            android:layout_marginRight="@dimen/x140"
            android:background="@drawable/blue_bt_selector"
            android:gravity="center"
            android:text="确定" />
    </com.feirui.feiyunbangong.view.RevealLayout>

